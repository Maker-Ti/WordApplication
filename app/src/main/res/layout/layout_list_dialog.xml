<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:layout_margin="52dp"
    android:orientation="vertical"
    android:visibility="gone"
    android:id="@+id/list_word"
    android:layout_height="wrap_content">
 <TextView
     android:background="@drawable/dialog_top"
     android:layout_width="match_parent"
     android:layout_height="10dp"/>
<ListView
    android:layout_marginTop="10dp"
    android:divider="@color/mainTextColor"
    android:background="#fff"
    android:layout_marginBottom="50dp"
    android:id="@+id/word_list"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
 <LinearLayout
     android:layout_marginTop="-50dp"
     android:layout_below="@+id/word_list"
     android:orientation="horizontal"
     android:layout_gravity="center"
     android:layout_width="match_parent"
     android:layout_height="50dp"
     android:gravity="center"
     android:textColor="#fff"
     android:background="@drawable/dialog_buttom">
  <TextView
      android:id="@+id/show_delete"
      android:layout_weight="1"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:textColor="#fff"
      android:text="批量删除"
      android:textSize="18dp"
    />
  <TextView
      android:layout_width="1dp"
      android:layout_height="30dp"
   android:background="#fff"
   android:layout_gravity="center"/>
  <RelativeLayout

      android:gravity="center"
      android:layout_weight="1"
      android:id="@+id/dialog_close"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
   <TextView
       android:layout_width="20dp"
       android:layout_height="20dp"
       android:background="@drawable/dialog_close_bc"/>
  </RelativeLayout>
 </LinearLayout>
</RelativeLayout>
